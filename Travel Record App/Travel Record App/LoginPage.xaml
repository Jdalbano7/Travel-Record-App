<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travel_Record_App.MainPage">

    <StackLayout Margin="15"
                 VerticalOptions="Center">
        <Entry x:Name="entryEmail" Keyboard="Email" Placeholder="Email"/>
        <Entry x:Name="entryPassword" IsPassword="True" Placeholder="Password"/>
        <Button x:Name="btnLogin" Text="Login"
                Margin="0, 50, 0, 0"
                BackgroundColor="#3f84e5"
                TextColor="White"
                Clicked="btnLogin_Clicked"/>

    </StackLayout>

</ContentPage>
